<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fawna" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <!-- Bottom navigation colors -->
        <item name="colorSurface">@color/nav_background</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="Theme.Fawna.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@color/nav_background</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/Theme.Fawna.Dialog.Button</item>
    </style>

    <style name="Theme.Fawna.Dialog.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/purple_200</item>
    </style>
</resources>